<h2>Edit</h2>

<div class="row">
	<div class="col-md-6">


		{{!-- 2. Instrucciones: adem√°s de lo habitual incluir el enctype --}}
		<form action="/suns/{{sun.category}}/list/{{sun._id}}/edit" method="POST" enctype="multipart/form-data">

			<div class="form-group">
				<label>Name:
					<input type="text" name="name" class="form-control" value="{{sun.name}}"/>
				</label>
			</div>

				<div class="form-group">
				<label>Category:
					<input name="category" cols="30" rows="4" class="form-control" value="{{sun.category}}"> </input>
				</label>
			</div>
        

			<div class="form-group">
				<label>Description:
					<textarea name="comment" cols="30" rows="4" class="form-control" value="{{sun.comment}}"> </textarea>
				</label>
			</div>

			<div class="form-group">
				<label>Street:
					<input name="street" cols="30" rows="4" class="form-control" value="{{sun.address.street}}"> </input>
				</label>
			</div>

			<div class="form-group">
				<label>Number:
					<input name="number" cols="30" rows="4" class="form-control" value="{{sun.address.number}}"> </input>
				</label>
			</div>

			<div class="form-group">
				<label>City:
					<input name="city" cols="30" rows="4" class="form-control" value="{{sun.address.city}}"> </input>
				</label>
			</div>

			<div class="form-group">
				<label>Image:
					<input type="file" name="sun-image" class="form-control-file" value="{{sun.pictures.[0]}}" multiple="multiple"/>
				</label>
			</div>

			<button type="submit" class="btn btn-primary">Edit</button>
		</form>
	
	</div>
</div>