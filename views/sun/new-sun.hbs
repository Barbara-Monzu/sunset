<h2>New {{category}}</h2>
<div class="row">
	<div class="col-md-6">


		
		<form action="/suns/{{category}}/new" method="POST" enctype="multipart/form-data">

			<div class="form-group">
				<label>Name:
					<input type="text" name="name" class="form-control" required/>
				</label>
			</div>
			<div id="address-group">
				<div class="form-group">
					<label>Street:
						<input name="street" cols="30" rows="4" class="form-control" required>
					</label>
				</div>

				<div class="form-group">
					<label>Number:
						<input name="number" cols="30" rows="4" class="form-control">
					</label>
				</div>

				<div class="form-group">
					<label>City:
						<input name="city" cols="30" rows="4" class="form-control">
					</label>
				</div>
			</div>
			<div class="form-group">
				<label>Description:
					<textarea name="comment" cols="30" rows="4" class="form-control" required> </textarea>
				</label>
			</div>


			<div>
				<button type="button" id="getCurrentLocation"> Get current location</button>
			</div>

			<div class="form-group">
				<label>Image:
					<input type="file" name="sun-image" class="form-control-file" multiple="multiple" />
				</label>
			</div>

			<div>
				<input type="hidden" id="latitude" name="latitude" value="">
				<input type="hidden" id="longitude" name="longitude" value="">
				<input type="hidden" id="check-navigator" name="checkNavigator" value="false">
			</div>

			<button type="submit" class="btn btn-primary">Create</button>
		</form>

		<script src="/js/current-location.js"></script>